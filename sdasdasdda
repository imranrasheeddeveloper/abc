    var variant: ButtonVariant
    @State private var buttonState: ButtonState = .enabled

    var body: some View {
        Button(action: {
            if buttonState == .enabled {
                buttonState = .pressed
            } else {
                buttonState = .enabled
            }
        }) {
            VStack(spacing: 8) {
                Image(systemName: iconImageName)
                    .foregroundColor(getIconForegroundColor())
                    .font(.system(size: 24))
            }
            .frame(width: 100, height: 100)
            .padding(10)
            .background(getButtonBackgroundColor())
            .cornerRadius(50)
            .opacity(buttonState == .disabled ? 0.5 : 1.0)
            .scaleEffect(buttonState == .pressed ? 0.9 : 1.0)
            .contentShape(Circle())
            .disabled(buttonState == .disabled)
           }
     }
