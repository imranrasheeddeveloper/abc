struct RoundBadge: View {
    var style: String
    var number: Int?
    
    var body: some View {
        Group {
            if style == "small" {
                Color.red
                    .frame(width: 20, height: 20)
                    .cornerRadius(10)
            } else if style == "number", let number = number {
                ZStack {
                    Color.red
                        .frame(width: 30, height: 30)
                        .cornerRadius(15)
                    
                    Text("\(number)")
                        .foregroundColor(.white)
                        .font(.system(size: 14, weight: .bold))
                }
            }
        }
    }
}

struct ContentView: View {
    var body: some View {
        VStack(spacing: 20) {
            RoundBadge(style: "small")
            RoundBadge(style: "number", number: 2)
        }
    }
}

struct ContentView_Previews: PreviewProvider {
    static var previews: some View {
        ContentView()
    }
}
