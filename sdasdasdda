private func leadingIconName(variant: ButtonVariant, state: ButtonState) -> String {
        switch (variant, state, colorScheme) {
        case (.primary, .enabled, .light):
            return "star.fill"
        case (.primary, .enabled, .dark):
            return "star"
        default:
            return "star"
        }
    }
    
    private func trailingIconName(variant: ButtonVariant, state: ButtonState) -> String {
        switch (variant, state, colorScheme) {
        case (.secondary, .enabled, _):
            return "heart.fill"
        default:
            return "heart"
        }
    }
    
    private func getIconForegroundColor() -> Color {
        switch (variant, state, colorScheme) {
        case (.primary, .enabled, .light),
             (.secondary, .enabled, _):
            return .yellow
        case (.primary, .enabled, .dark):
            return .orange
        default:
            return .gray
        }
    }
