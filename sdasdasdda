struct ElevationModifier: ViewModifier {
    var shouldApply: Bool
    
    func body(content: Content) -> some View {
        if shouldApply {
            return content.addElevation()
        } else {
            return content
        }
    }
}

extension View {
    func elevation(when shouldApply: Bool) -> some View {
        self.modifier(ElevationModifier(shouldApply: shouldApply))
    }
}
